{
    "name": "adrenth/thetvdb2",
    "description": "API v2 Client for thetvdb.com",
    "type": "library",
    "keywords": ["thetvdb", "thetvdb.com", "api", "library"],
    "license": "MIT",
    "homepage": "http://github.com/adrenth/thetvdb2",
    "authors": [
        {
            "name": "Alwin Drenth",
            "email": "adrenth@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.1",
        "guzzlehttp/guzzle": "^6.0",
        "symfony/serializer": "^4.2|^5.1",
        "illuminate/support": "^5.0|^6.0|^7.0|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "symfony/var-dumper": "^3.0",
        "friendsofphp/php-cs-fixer": "^2.17"
    },
    "archive": {
        "exclude": [
            "/tests"
        ]
    },
    "autoload": {
        "psr-4": {
            "Adrenth\\Thetvdb\\": "src/"
        },
        "exclude-from-classmap": [
            "/tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Adrenth\\Thetvdb\\Tests\\": "tests/"
        }
    }
}
